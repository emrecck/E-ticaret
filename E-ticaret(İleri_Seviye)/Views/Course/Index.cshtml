@model IEnumerable<E_ticaret_İleri_Seviye_.Models.Course>

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewBag.Title = "Index";
}

<h2 class="mt-5">Courses</h2>
<hr class="my-3"/>
<p>
    @Html.ActionLink("Create New", "Create",null,new { @class="btn btn-dark btn-lg"})
</p>
<table class="table table-bordered table-striped table-dark table-responsive-xl">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PersonAdded)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseReyting)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseLanguage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseLectures)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseLenght)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseImage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PersonAdded)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseReyting)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseLanguage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseLectures)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseLenght)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id },new { @class="badge badge-info p-2 text-light"}) |
            @Html.ActionLink("Details", "Details", new { id=item.Id } , new { @class = "badge badge-success p-2 text-light" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id } , new { @class = "badge badge-danger p-2 text-light" })
        </td>
    </tr>
}

</table>
