@model E_ticaret_İleri_Seviye_.Models.Course
@{
    ViewBag.Title = "Details";
}
<div class="container">
    <div class="d-flex align-items-stretch pt-5 pb-3">
        <div class="col-md-6  opacity">
            <img src="@Model.CourseImage" class="img-responsive w-100 rounded" alt="@Model.CourseName">
        </div>
        <div class="col-md-6">
            <h1 class="h1">@Model.CourseName</h1>
            <span class="badge badge-primary" style="font-size: 20px;">Discount</span>
            <small class="product-number">
                @Model.CourseLenght Saat içerik
                <strong style="font-size: 36px;"> @Model.Price <i class="fas fa-lira-sign"></i> </strong>
            </small>
            <div class="py-2">
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star-half-alt"></i>
                <span class="text-muted">@Model.CourseReyting ( @Model.PersonAdded )</span>
            </div>
            <span class="text-muted" id="description">
                @Model.WhatWillYouLearn
            </span>
            <div class="add-to-cart text-right">
                @using( Html.BeginForm("AddToCart" , "ShoppingCart") )
                {
                    @Html.HiddenFor(i => i.Id)
                    <button type="submit" class="btn btn-info  ">
                        <i class="fas fa-shopping-cart"></i>
                        Add to Cart
                    </button>
                }

            </div>
        </div>
    </div>
    <div class="bd-example bd-example-tabs">
        <ul class="nav nav-tabs mb-3" id="pills-tab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab"
                   aria-controls="pills-home" aria-selected="true">Course Description</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab"
                   aria-controls="pills-profile" aria-selected="false">General Review</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab"
                   aria-controls="pills-contact" aria-selected="false">Contain</a>
            </li>
        </ul>
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade active show" id="pills-home" role="tabpanel"
                 aria-labelledby="pills-home-tab">
                <p>
                    @Model.Description
