@model IEnumerable<E_ticaret_İleri_Seviye_.Models.Category>
@{
    var selectedCategory = Url.RequestContext.RouteData.Values["id"];
}
    <ul class="list-group list-unstyled">
        <li class="list-group-item"> <a class="text-dark" href="/Home/List"> Tüm Kategoriler</a></li>
        @foreach( var item in Model )
        {
            if( selectedCategory != null )
            {
                if( item.Id == int.Parse(selectedCategory.ToString()) )
                {
                    <li class="list-group-item active ">
                        <a class="text-light" href="/Home/List/@item.Id">
                            @item.CategoryName
                        </a>
                    </li>
                }
                else
                {
                    <li class="list-group-item">
                        <a class="text-dark" href="/Home/List/@item.Id">
                            @item.CategoryName
                        </a>
                    </li>
                }

            }
            else
            {
                <li class="list-group-item">
                    <a class="text-dark" href="/Home/List/@item.Id">
                        @item.CategoryName
                    </a>
                </li>
            }


        }
    </ul>