@model IEnumerable<E_ticaret_İleri_Seviye_.Models.Course>
@{
    ViewBag.Title = "List";
}
<div class="list-container pt-5">
    <div class="row">
        <div class="col-md-3">
            @Html.Action("Categories" , "Home")
        </div>
        <div class="col-md-9">
            @if( Model.Count() == 0 )
            {
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i>
                    There is no course in this category.
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    @Model.Count() course founded.
                </div>
                @Html.Partial("CourseList" , Model)
            }

        </div>
    </div>
</div>